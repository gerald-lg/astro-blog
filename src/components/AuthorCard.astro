interface Props {
    author: CollectionEntry<'author'>
}

const { author } = Astro.props;

const { name, avatar, twitter, linkedIn, github, bio, subtitle} = author.data;

---

<div class="max-w-lg mx-auto my-10 bg-slate-800 rounded-lg shadow-md p-5 text-white">
    <img class="w-32 h-32 rounded-full mx-auto" src={avatar.src} alt={`Profile picture of ${name}`}>
    <h2 class="text-center text-2xl font-semibold mt-3">{name}</h2>
    <p class="text-center text-slate-100 mt-1">{subtitle}</p>
    <div class="flex justify-center mt-5">
        <a href={twitter} class="text-blue-500 hover:text-blue-700 mx-3">Twitter</a>
        <a href={linkedIn} class="text-blue-500 hover:text-blue-700 mx-3">LinkedIn</a>
        <a href={github} class="text-blue-500 hover:text-blue-700 mx-3">GitHub</a>
    </div>
    <div class="mt-5">
        <h3 class="text-xl font-semibold">Bio</h3>
        <p class="text-slate-100 mt-2">{bio}</p>
    </div>
    <div class="mt-5 flex justify-end">
        <a href={`/blog/${author.id}`} class="text-blue-500 hover:text-blue-700">Leer m√°s</a>
    </div>
</div>